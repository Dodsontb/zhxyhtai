   <select id="queryByHeadCount" resultType="int">
  		select count(0) from `Notice`
  		<where>
	  		<if test="name">
		  		and headline like concat ("%",#{name},"%")
	  		</if>
	  		<if test="typeid>=0">
	  			and TypeId =#{typeid}
	  		 </if>
  		</where>
  		
  </select>
  
  <select id="queryByHead" resultMap="BaseResultMap">
  		select * from `Notice`
  		<where>
	  		<if test="name">
		  		and headline like concat ("%",#{name},"%")
	  		</if>
	  		<if test="typeid>=0">	
	  			and TypeId =#{typeid}
	  		 </if>
  		</where>
  		ORDER BY `ntime` DESC
  		limit #{start},#{pagesize}
  		
  </select>
  
